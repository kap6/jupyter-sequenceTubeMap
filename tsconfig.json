{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop":true,
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2015",
    "types": ["jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts","src/js/**/*.js","src/**/*.css"],
  "exclude": ["src/**/__tests__"]
}
